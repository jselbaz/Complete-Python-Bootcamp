st = 'Print only the words that start with s in this sentence'
for word in st.split():
        if word[0].lower() == 's':
                print(word)

word_list = [word for word in st.split() if word[0].lower() =='s']
print(word_list)

num_list = [x for x in range(0,11) if x % 2 == 0]
print(num_list)

num_list = [x for x in range(0,11,2)]
print(num_list)

num_list = [x for x in range(1,51) if x % 3 ==0]
print(num_list)

st = 'Print every word in this sentence that has an even number of letters'
word_list = [word for word in st.split() if len(word) % 2 ==0]
print(word_list)

for num in range(0,101):
        if ((num % 3 == 0) and (num % 5 == 0)):
                print("FizzBuzz")
        elif (num % 3 == 0):
                print("Fizz")
        elif (num % 5 == 0):
                print("Buzz")
        else:
                print(num)
                
st = 'Create a list of the first letters of every word in this string'
list = [word[0] for word in st.split()]
print(list)
